<Window x:Class="wpfblingblim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfblingblim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <ListView x:Name="listView" Margin="0,0,0,62">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding m_nID}" Width="50"/>
                <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding m_strName}" Width="150"/>
                <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding m_strSname}" Width="150"/>
                <GridViewColumn Header="PESEL" DisplayMemberBinding="{Binding m_strPESEL}" Width="150"/>
            </GridView>
                </ListView.View>
                </ListView>
            <Button x:Name="button" Content="Dodaj" HorizontalAlignment="Left" Margin="739,0,0,23" VerticalAlignment="Bottom" Click="button_Click"/>
    </Grid>
</Window>
